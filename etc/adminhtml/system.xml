                    </depends>
                </field>
                <field id="attribute_values" translate="label" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Userdefined Attribute Values for Formats</label>
                    <depends>
                        <field id="attribute_enabled">1</field>
                    </depends>
                    <frontend_model>Rissc\Printformer\Block\Adminhtml\System\Config\Form\Field\AttributeMap</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized</backend_model>
